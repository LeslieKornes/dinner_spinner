<%= form_with model: meal do |meal_form| %>
  <%= render 'shared/errors', object: meal %>

  <%= meal_form.label :name %>
  <%= meal_form.text_field :name %>

  <%= meal_form.label :description %>
  <%= meal_form.text_area :description, rows: 5 %>

  <%= meal_form.label :link %>
  <%= meal_form.text_area :link %>

  <%= meal_form.submit %>
<% end %>